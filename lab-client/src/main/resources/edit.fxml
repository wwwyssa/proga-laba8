<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>

<AnchorPane prefHeight="529.0" prefWidth="478.0" style="-fx-background-color: #d2efff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab8.client.controllers.EditController">
    <VBox layoutX="50.0" layoutY="20.0" prefWidth="400.0" spacing="10" AnchorPane.rightAnchor="28.0">
        <Label fx:id="titleLabel" alignment="CENTER" text="Менять" textAlignment="CENTER">
            <font>
                <Font name="Segoe UI Black" size="30.0" />
            </font>
        </Label>

        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="nameLabel" text="Name">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" prefWidth="200.0" />
            </HBox>

            <HBox spacing="10">
                <Label text="X">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="productXField" prefWidth="90.0" />
                <Label text="Y">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="productYField" prefWidth="90.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="priceLabel" text="Price">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="priceField" prefHeight="26.0" prefWidth="100.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="partNumberLabel" text="Part number">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="partNumberField" prefHeight="26.0" prefWidth="100.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="manufactureCostLabel" text="Manufacture Cost">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="manufactureCostField" prefHeight="26.0" prefWidth="100.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="unitOfMeasureLabel" text="Unit of measure">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <ChoiceBox fx:id="unitOfMeasureBox" prefHeight="26.0" prefWidth="120.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="mNameLabel" text="Manufacturer name">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="mNameField" prefHeight="26.0" prefWidth="150.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="mEmployeesCountLabel" text="Manufacturer employees count">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="mEmployeesCountField" prefHeight="26.0" prefWidth="80.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="mTypeLabel" text="Manufacturer type">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <ChoiceBox fx:id="mTypeBox" prefHeight="26.0" prefWidth="120.0" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="mStreetLabel" text="Manufacturer street">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="mStreetField" prefHeight="26.0" prefWidth="100.0" />
            </HBox>

            <HBox spacing="10">
                <Label text="X">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="locXField" prefHeight="26.0" prefWidth="80.0" />
                <Label text="Y">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="locYField" prefHeight="26.0" prefWidth="80.0" />
                <Label text="Z">
                    <font>
                        <Font name="Segoe UI" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="locZField" prefHeight="26.0" prefWidth="77.0" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#ok" prefHeight="38.0" prefWidth="116.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="OK">
                <font>
                    <Font name="Segoe UI" size="20.0" />
                </font>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" prefHeight="38.0" prefWidth="116.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Cancel">
                <font>
                    <Font name="Segoe UI" size="20.0" />
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
